generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProfileType {
  JOGADOR
  TORCEDOR
  ATLETICA
}

enum TeamSide {
  A
  B
}

enum MatchStatus {
  EM_BREVE
  EM_ANDAMENTO
  FINALIZADO
}
model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  userName  String   @unique
  profileType ProfileType?
  subscription PlayerSubscription[]
  matchs Match[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  passwordHash String
}

model Match {
  id String @id @default(uuid())
  title String // título (obrigatório)
  description String? // descrição (opcional)
  author User @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId String 
  MatchDate DateTime // data e hora da partida
  MatchStatus MatchStatus @default(EM_BREVE)
  location String // local
  maxPlayers Int // numero max de jogadores
  teamNameA String @default("Time A")
  teamNameB String @default("Time B")
  players PlayerSubscription[] // jogadores inscritos
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PlayerSubscription {
  id String @id @default(uuid())
  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  matchId String
  match Match @relation(fields: [matchId], references: [id], onDelete: Cascade)
  team TeamSide
  createdAt DateTime @default(now())
  @@unique([userId, matchId]) // garante que o usuário apenas se inscreva uma vez por partida
}

