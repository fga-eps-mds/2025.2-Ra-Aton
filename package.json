{
  "name": "Aton",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:api": "pnpm --filter api dev:ready",
    "dev:mobile": "pnpm --filter mobile dev",
    "test": "turbo run test --parallel",
    "test:api": "pnpm --filter api -s test",
    "test:mobile": "pnpm --filter mobile -s test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@testing-library/jest-native": "^5.0.2",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^29.5.4",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@testing-library/react-native": "^13.3.3",
    "jest-expo": "~54.0.13"
  }
}
