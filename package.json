{
  "name": "Aton",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:api": "pnpm --filter api dev:ready",
    "dev:mobile": "pnpm --filter mobile dev",
  "test": "turbo run test --parallel",
    "test:api": "pnpm --filter api -s test",
    "test:mobile": "pnpm --filter mobile -s test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
